doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= book.title
    body 
        h1= book.title 
        ul 
            li= "Author: " + book.author
            li= "Year published: " + book.published 
        a(href="/books") All Books
        br
        a(href="/books/" + id + "/update") Change 
        br
        form(action="/books/" + id + "/delete", method="post") 
            input(type="submit", value="Delete") 