doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= book.title
        link(rel="stylesheet", href="/update.css")
    body 
        form(action="/books/" + id + "/update", method="post") 
            label(for="title") Book Title 
            input#title(type="text", name="title", value= book.title) 

            label(for="author") Author 
            input#author(type="text", name="author", value= book.author)

            label(for="published") Year Published  
            input#published(type="number", name="published", value= book.published)

            input(type="submit", value="Update")